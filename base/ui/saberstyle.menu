			visible				1
			decoration
		}

		itemDef 
		{
			name				styleboxleft
			group				none
			style				WINDOW_STYLE_SHADER
			rect				127 118 198 40
			background			"gfx/menus/sabermenu_stylebox_left"
			forecolor			1 1 1 1
			visible				1
			decoration
		}

		itemDef 
		{
			name				styleboxright
			group				none
			style				WINDOW_STYLE_SHADER
			rect				325 118 198 40
			background			"gfx/menus/sabermenu_stylebox_right"
			forecolor			1 1 1 1
			visible				1
			decoration
