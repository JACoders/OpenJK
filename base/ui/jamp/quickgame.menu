			outlinecolor			.25 .464 .578 .5
			descText			@MENUS_CHOOSE_YOUR_GAME
			visible				1
			columns				1 2 190 172
	      		action 
			{ 
				play				"sound/interface/button1.wav" ; 
			}
			mouseEnter 
			{ 
				setitemcolor	maplist bordercolor .79 .64 .22 1
			} 
			mouseExit 
			{ 
				setitemcolor	maplist bordercolor .79 .64 .22 .5
			} 
