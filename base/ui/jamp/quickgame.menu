			rect				150 11 340 30
			background			"gfx/menus/menu_buttonback"
			forecolor			1 1 1 1
			visible				1
			decoration
		}
		
		itemDef 
		{
			name				title
			group				none
			style				WINDOW_STYLE_EMPTY
