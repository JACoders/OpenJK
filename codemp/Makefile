zlib/%.o: zlib/%.c
	$(CC) $(CXXFLAGS) -c $< -o $@
	
mp3code/%.o: mp3code/%.c
	$(CC) $(CXXFLAGS) -c $< -o $@

%.o: %.c
	$(CXX) $(CXXFLAGS) -c $< -o $@
		        
botlib/%.o: botlib/%.cpp
	$(CXX) $(CXXFLAGS) -DBOTLIB -c $< -o $@
	
unix/%.o: unix/%.nasm
	nasm -f elf -o $@  $<

all: $(OBJS)
	$(CXX) -m32 -o jamp $(OBJS) -lopenal -lGL `sdl-config --libs`

clean:
	$(RM) $(OBJS)
