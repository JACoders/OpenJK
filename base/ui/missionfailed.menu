		{
			name				failed_title
			group				title
			style				WINDOW_STYLE_EMPTY
			background			"gfx/menus/menu_blendbox"
			text				@SP_INGAME_MISSIONFAILED
      			rect				0 20 640 16
			font				3
			textscale			1
			textalign			ITEM_ALIGN_CENTER		
