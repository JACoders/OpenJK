		}
		
		// NEXT button		
		itemDef 
		{
			name					next_button
			text					@MENUS_NEXT
			descText				@MENUS_CHOOSE_RULES
			type					ITEM_TYPE_BUTTON
			font					3
			textscale				1.1
			textstyle				0
