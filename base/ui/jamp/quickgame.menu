//----------------------------------------------------------------------------------------------
//	MAP SCREENSHOT
//----------------------------------------------------------------------------------------------
		itemDef 
		{
			name				setup_background
			group				none
			style				WINDOW_STYLE_FILLED
			rect				280 104 340 280
			backcolor			0 0 .6 .5
