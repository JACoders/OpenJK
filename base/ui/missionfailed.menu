		descAlignment				ITEM_ALIGN_CENTER
		ignoreescape				1		

		onClose 
		{ 
		}
		
		onOpen 
		{ 
			setcvar				ui_missionfailed	"0"
		}
		
		onESC 
		{ 
		}
	
			 				 	
